{
  "name": "qoder-s1-vampire-survivors",
  "version": "2.0.0",
  "description": "重构优化版的 HTML5 Vampire Survivors 风格游戏",
  "type": "module",
  "main": "js/main.js",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server.js",
    "start": "npm run server",
    "lint": "eslint js/**/*.js --fix",
    "format": "prettier --write 'js/**/*.js' '*.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist node_modules/.vite",
    "install-deps": "npm install",
    "setup": "npm run install-deps && npm run dev"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "vite": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/main.js",
      "!js/legacy/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "keywords": [
    "game",
    "html5",
    "canvas",
    "vampire-survivors",
    "rpg",
    "javascript",
    "qoder"
  ],
  "author": "Qoder Team",
  "license": "MIT"
}
